<html>
<head>
    <title>update user</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>
        $(document).ready(function(){
            var userID,userRoleName,userRoleID,userPrivilegeName,userPrivilegeID,firstName,lastName,email,newPin, oldPin,confirmPin,photo;
            $("#<%= users.id %>").click(function(){
                userID=$(this).attr('id');
                userRoleID=$("input:radio[name='userRoleID']:checked").val();
                userRoleName = $("input:radio[name='userRoleID']:checked + label").text();
                userPrivilegeID=$("input:radio[name='userPrivilegeID']:checked").val();
                userPrivilegeName = $("input:radio[name='userPrivilegeID']:checked + label").text();
                firstName=$("#firstName").val();
                lastName=$("#lastName").val();
                email=$("#email").val();
                oldPin=$("#oldPin").val();
                newPin=$("#newPin").val();
                confirmPin=$("#confirmPin").val();
                photo=$("#photo").val();

                //-----forms validation------------------------------------
                if (firstName == "" ) {
                    alert("FIRST NAME must be filled out");
                    return false;
                }
                if (lastName == "" ) {
                    alert("LAST NAME must be filled out");
                    return false;
                }
                var mailFormat = /^([a-z A-Z 0-9 _\.\-])+\@(([a-z A-Z 0-9\-])+\.)+([a-z A-z 0-9]{2,4})+$/;
                if (!mailFormat.test(email)) {
                    alert("Please input a valid EMAIL address!");
                    return false;
                }
                if (newPin !== oldPin) {
                    var pinFormat = /^\d{4}$/;
                    if (!pinFormat.test(newPin)) {
                        alert("Pin code should be 4 digits ");
                        return false;
                    }
                    if (!pinFormat.test(confirmPin)) {
                        alert("Confirm Pin code should be 4 digits ");
                        return false;
                    }
                    if (newPin != confirmPin) {
                        alert("Pin and Confirm Pin don't match!");
                        return false;
                    }
                }
                if (userRoleID == null ) {
                    alert("USER ROLE must be filled out");
                    return false;
                }
                if (userPrivilegeID == null ) {
                    alert("USER PRIVILEGE must be filled out");
                    return false;
                }

                //--------------------------------forms validation end-------
                var pin;
                if (newPin !== oldPin) {
                    pin = newPin;

                } else{
                    pin = "oldPin";
                }
                $.post("/users/updateUser", {
                    userToUpdate: userID,
                    userRoleName: userRoleName,
                    userRoleID: userRoleID,
                    userPrivilegeName: userPrivilegeName,
                    userPrivilegeID: userPrivilegeID,
                    firstName: firstName,
                    lastName: lastName,
                    email: email,
                    pin: pin,
                    photo: photo
                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function (error) {
                    if (error.responseText == 'showAlert')
                        alert("Email already in use. Choose a different Email .")
                });

            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>
<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>



    <label for="firstName"><b>First Name:</b></label><br>
    <input type="text" id="firstName" size="40" value="<%= users.firstName %>"><br><br>
    <label for="lastName"><b>Last Name:</b></label><br>
    <input type="text" id="lastName" size="40" value="<%= users.lastName %>"><br><br>
    <label for="email"><b>Email:</b></label><br>
    <input type="email" id="email" size="40" value="<%= users.email %>"><br><br>
    <label for="pin"><b>Pin:</b></label><br>
    <input type="hidden" id="oldPin" size="40" value="<%= users.pin %>">
    <input type="password" id="newPin" size="40" value="<%= users.pin %>"><br><br>
    <label for="confirmPin"><b>Confirm Pin:</b></label><br>
    <input type="password" id="confirmPin" size="40" value="<%= users.pin %>"><br><br>

    <input type="hidden" id="photo" >

    <label for="userRole"><b>User Role:</b></label><br>
    <% roles2.forEach(function(role2) { %>
        <%if (role2.roleID == users.userRoleID) { %>
        <input type="radio" name="userRoleID" id=<%= role2.roleName %> value="<%= role2.roleID %>" checked><label for="userRoleName"><%= role2.roleName %></label><br>
        <% }else {%>
        <input type="radio" name="userRoleID" id=<%= role2.roleName %> value="<%= role2.roleID %>"><label for="userRoleName"><%= role2.roleName %></label><br>
        <% }%>
    <% }); %><br>

    <label for="userPrivilege"><b>User Role:</b></label><br>
    <% privilege.forEach(function(privilege) { %>
    <% if (userAuthID == 1) {%>
        <%if (privilege.privilegeID == users.userPrivilegeID) { %>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>" checked><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }else {%>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>"><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }%>
    <% } else if (privilege.privilegeID != 1 ) { %>
        <%if (privilege.privilegeID == users.userPrivilegeID) { %>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>" checked><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }else {%>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>"><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }%>
    <% } %>
    <% }); %><br>

    <% if (aclModifyUsers == null || aclModifyUsers.checkBoxValue == true) {%>
    <input type="button" id=<%= users.id %> value="Submit" ><br>
    <% } else { %>
    <input type="button" id=<%= users.id %> value="Submit" disabled><br>
    <% } %>
</form>
    <form action="/users/showUsers">
        <% if (aclModifyUsers == null || aclModifyUsers.checkBoxValue == true) {%>
        <input type="submit" value="Back" ><br>
        <% } else { %>
        <input type="submit" value="Back" disabled><br>
        <% } %>
    </form>

</body>
</html>