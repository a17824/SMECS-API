<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>



    <label for="firstName"><b>First Name:</b></label><br>
    <input type="text" id="firstName" size="40" value="<%= users.firstName %>"><br><br>
    <label for="lastName"><b>Last Name:</b></label><br>
    <input type="text" id="lastName" size="40" value="<%= users.lastName %>"><br><br>
    <label for="email"><b>Email:</b></label><br>
    <input type="email" id="email" size="40" value="<%= users.email %>"><br><br>
    <label for="pin"><b>Pin:</b></label><br>
    <input type="hidden" id="oldPin" size="40" value="<%= users.pin %>">
    <input type="password" id="newPin" size="40" value="<%= users.pin %>"><br><br>
    <label for="confirmPin"><b>Confirm Pin:</b></label><br>
    <input type="password" id="confirmPin" size="40" value="<%= users.pin %>"><br><br>

    <input type="hidden" id="photo" >

    <label for="userRole"><b>User Role:</b></label><br>
    <% roles2.forEach(function(role2) { %>
        <%if (role2.roleID == users.userRoleID) { %>
        <input type="radio" name="userRoleID" id=<%= role2.roleName %> value="<%= role2.roleID %>" checked><label for="userRoleName"><%= role2.roleName %></label><br>
        <% }else {%>
        <input type="radio" name="userRoleID" id=<%= role2.roleName %> value="<%= role2.roleID %>"><label for="userRoleName"><%= role2.roleName %></label><br>
        <% }%>
    <% }); %><br>

    <label for="userPrivilege"><b>User Role:</b></label><br>
    <% privilege.forEach(function(privilege) { %>
    <% if (userAuthID == 1) {%>
        <%if (privilege.privilegeID == users.userPrivilegeID) { %>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>" checked><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }else {%>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>"><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }%>
    <% } else if (privilege.privilegeID != 1 ) { %>
        <%if (privilege.privilegeID == users.userPrivilegeID) { %>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>" checked><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }else {%>
            <input type="radio" name="userPrivilegeID" id=<%= privilege.privilegeName %> value="<%= privilege.privilegeID %>"><label for="userPrivilegeName"><%= privilege.privilegeName %></label><br>
        <% }%>
    <% } %>
    <% }); %><br>

    <% if (aclModifyUsers == null || aclModifyUsers.checkBoxValue == true) {%>
    <input type="button" id=<%= users.id %> value="Submit" ><br>
    <% } else { %>
    <input type="button" id=<%= users.id %> value="Submit" disabled><br>
    <% } %>
</form>
    <form action="/users/showUsers">
